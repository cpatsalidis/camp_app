<%- layout('layouts/boilerplate') %>

    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add New Campground</a>
    </div>

    <% campgrounds.forEach(campground=> { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.image %>" class="img-fluid"
                        alt="<%= campground.title %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="txt-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title
                                %>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>