<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <div class="card-body">
                    <h1 class="card-title">
                        <%= campground.title%>
                    </h1>
                    <p class="card-text">
                        <%= campground.description%>
                    </p>
                    <img class="img-fluid" src="<%= campground.image%>" alt="<%= campground.title%>">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location%>
                    </li>
                    <li class="list-group-item">$<%= campground.price%>/night</li>
                </ul>

                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-body">
                    <h2>Leave Review</h2>
                    <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate
                        class="validated-form">
                        <div class="mb-3">
                            <label for="rating" class="form-label">Rating</label>
                            <input class="form-range" type="range" id="rating" name="review[rating]" min="1" max="5">
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-label">Review</label>
                            <textarea class="form-control" name="review[body]" id="body" cols="30" row="3"
                                required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
                    <div class="mt-3 mb-3">
                        <% for(let review of campground.reviews) { %>
                            <p>
                                <%= review.body %>, rating: <%= review.rating %>/5
                            </p>
                            <% } %>
                    </div>

                </div>
            </div>
        </div>